<!-- Page Content -->
<div class="container articles">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8">
      <h1 class="my-4">Interesting articles</h1>

      <% @articles.each do |article| %>
        <div class="card mb-4">
          <div class="card-body">
            <h2 class="card-title"><%= link_to article.title, article %></h2>
            <p class="card-text"><%== article.short_description %></p>
            <%= link_to 'Read more...', article, class: 'btn btn-primary' %>
          </div>
          <div class="card-footer text-muted">
            <%= article.decorate.posted_date %> by <%= article.author %>
          </div>
        </div>
      <% end %>
    </div>
		<%= render 'articles/sidebar' %>
  </div>

</div>
