<!-- Page Content -->
<div class="container categories">
  <div class="row">
    <div class="col-md-8">
      <h1 class="my-4">Interesting articles</h1>
      <h1 class="my-4"><%= link_to 'New category', new_users_category_path %></h1>

      <% @categories.each do |category| %>
        <div class="card mb-4">
          <div class="card-body">
            <h2 class="card-title"><%= category.title %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
