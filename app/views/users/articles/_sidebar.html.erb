<!-- Sidebar Widgets Column -->
<div class="col-md-4">
   <!-- Buttons -->
  <div class="card my-4">
    <h5 class="card-header">Buttons</h5>
    <div class="card-body">
      <div class="input-group">
        <%= link_to 'New article', new_users_article_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>

  <!-- Search Widget -->
  <div class="card my-4">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
          <button class="btn btn-secondary" type="button">Go!</button>
        </span>
      </div>
    </div>
  </div>
  <!-- Categories Widget -->
  <div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <% @categories.each do |category| %>
            <button type="button" class="btn btn-primary">
              <%= link_to category.title, users_category_path(category) %> <span class="badge badge-light"><%= category.articles.count %></span>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- Side Widget -->
  <div class="card my-4">
    <h5 class="card-header">About</h5>
    <div class="card-body">
      These are the articles that turned out to be very interesting to me
    </div>
  </div>
</div>
